datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @default(autoincrement()) @id
  email    String  @unique
  password String  @default("")
  name     String?
  posts    Post[]
}

model Post {
  id        Int     @default(autoincrement()) @id
  title     String
  content   String?
  author    User?   @relation(fields: [authorId], references: [id])
  authorId  Int?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}